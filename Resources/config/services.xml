<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sayme_gulp_rev.twig.extension.gulp_rev" 
            class="Sayme\GulpRevBundle\Twig\Extension\GulpRevExtension"
            public="false">
            <argument>%sayme_gulp_rev.manifest_path%</argument>
            <argument>%sayme_gulp_rev.build_dir%</argument>
            <tag name="twig.extension" />
        </service>
    </services>

</container>